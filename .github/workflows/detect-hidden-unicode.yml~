name: Detect hidden unicode

on:
  pull_request:

jobs:
  detect-hidden-unicode:
    runs-on: ubuntu-latest
    steps:
      - uses: greenbone/actions/detect-hidden-unicode@main
        with:
          github-token: ${{ secrets.GREENBONE_BOT_TOKEN }}
          detect-hidden-unicode-args: "--filter '.*hidden-unicode-test.*'"
